@model  IEnumerable<CarSystem.Web.Models.Advert.AdvertDetailViewModel>

@{
    ViewBag.Title = "Adverts list";
}

<div class="well well-sm">
    <h3 class="text-center text-info">@ViewBag.Title</h3>
</div>
<div class="container">
    @foreach (var advert in Model)
    {
        <div class="col-md-10">
            <div class="row">
                <div class="well">
                    <strong>
                        <a href="@advert.Url"><strong>Advert Title: </strong>@advert.Title</a>
                    </strong>
                    <div class="well-sm">
                        <strong>Price: </strong>@advert.Price
                    </div>
                    </div>
                </div>
        </div>
    }
</div>
